@import '~src/styles/_mixins.styl'

.login
  width 100%
  height 100%
  overflow hidden
  position relative

  .title
    font-size 16px

  .login_icon
    position absolute
    z-index 1
    top 27px
    right -58px
    width 116px
    height 48px
    icon('src/assets/login/login_icon.svg')

  // .form_box
  .login_left
    padding 172px 106px
    position absolute
    right 0
    top 0
    width 43%
    background #fff
    height 100%

    .login_title
      margin 0 auto
      width 258px
      height 80px
      bg('src/assets/login/login_title.png')

    .tabs
      border-bottom 1px solid #C7CBD6
      margin-bottom 32px

      .tabs_item
        display inline-block
        padding 8px 2px
        font-size 16px
        line-height 21px
        text-align center
        color #193586
        position relative

        &.active
          &::before
            content ''
            position absolute
            height 3px
            width 100%
            left 0px
            bottom 0
            border-radius 3px 3px 0px 0px
            background #193586

  .login_right
    position relative
    width 57%
    height 100%
    bg('src/assets/login/login-bg.png')
