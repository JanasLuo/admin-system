
.base_comp
  display flex
  height 100%

  .menu
    flex 0 0 300px
    font-size var(--font-size-large)
    line-height 30px
    box-shadow var(--container-c100)
    padding 10px

    :global
      a
        display block
        color var(--type-800)

        &.active
          color var(--primary-900)

  .page
    flex 1
    padding 20px
    height 100%
    overflow auto