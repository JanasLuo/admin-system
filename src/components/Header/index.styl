@import '~src/styles/_mixins.styl'

:global
  .header-main
    color blue

.header
  width 100%
  height 64px
  display flex
  position relative
  z-index 100
  justify-content space-between
  background #193586
  align-items center
  padding 0 24px
  justify-content space-between

  .right_box
    display flex
    align-items center
    flex 1
    height 100%

    .user_header
      width 24px
      height 24px
      icon('~src/assets/header/account-photo.svg')
      margin-right 8px

    .user_name
      color var(--light-general-100)
      font-size var(--font-size-normal)
      position relative
      padding-right 24px

      &::before
        content ''
        position absolute
        width 2px
        height 8px
        right 0px
        top 50%
        transform translateY(-50%)
        background rgba(255, 255, 255, 0.32)

    .notification, .setting, .help, .logout
      width 16px
      height 16px
      margin-left 24px
      cursor pointer
