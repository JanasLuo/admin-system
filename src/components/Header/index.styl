@import '~src/styles/_mixins.styl'

.header
  width 100%
  height 64px
  display flex
  position relative
  z-index 100
  justify-content space-between
  background #193586
  align-items center
  padding 0 24px
  justify-content space-between

  .left_box
    width 128px
    height 45px
    base_bg('src/assets/header/logo.svg')
    cursor pointer
    margin-right 48px

  .right_box
    display flex
    align-items center
    flex 1
    height 100%
    .user_header
      width 24px
      height 24px
      icon('src/assets/header/account-photo.svg')
      margin-right 8px
    .user_name
      color var(--light-general-100)
      font-size var(--font-size-normal)
      position relative
      padding-right 24px
      &::before
        content ''
        position absolute
        width 2px
        height 8px
        right 0px
        top 50%
        transform translateY(-50%)
        background rgba(255, 255, 255, 0.32)
    .notification, .setting, .help, .logout
      width 16px
      height 16px
      margin-left 24px
      cursor pointer
    .notification
      icon('src/assets/header/notification.svg')
    .setting
      icon('src/assets/header/setting.svg')
    .help
      icon('src/assets/header/help-bold.svg')
    .logout
      icon('src/assets/header/logout.svg')


