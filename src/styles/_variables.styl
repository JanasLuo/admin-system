:root
  /* 背景色 */
  --bg-100 #021627
  --bg-200 #042C4D
  --bg-300 #05355C
  --bg-400 #063E6B
  --bg-500 #074B82
  /* type 字体大小 */
  --font-size-small 12px
  --font-size-normal 14px
  --font-size-medium 16px
  --font-size-large 20px
  --font-size-xlarge 24px
  /* type 颜色 */
  --white-900 #FFFFFF
  --white-800 rgba(255, 255, 255, 0.64)
  --white-700 rgba(255, 255, 255, 0.48)
  --white-600 rgba(255, 255, 255, 0.32)
  --white-500 rgba(255, 255, 255, 0.16)
  // primary
  --primary-900 #29D4FF
  --primary-800 radial-gradient(100% 469.69% at 0% 0%, #1681BC 0%, #15B3BD 100%)
  --primary-a100 radial-gradient(100% 321.18% at 0% 0%, rgba(41, 212, 255, 0.16) 0%, rgba(41, 212, 255, 0.08) 100%)
  --primary-a200 radial-gradient(100% 285.63% at 0% 0%, rgba(41, 212, 255, 0.24) 0%, rgba(41, 212, 255, 0.16) 100%)
  --primary-a300 radial-gradient(100% 288.26% at 0% 0%, rgba(41, 212, 255, 0.32) 0%, rgba(41, 212, 255, 0.16) 100%)
  --primary-a400 radial-gradient(100% 266.67% at 0% 0%, rgba(41, 212, 255, 0.4) 0%, rgba(41, 212, 255, 0.08) 100%)
  // mono
  --mono-100 radial-gradient(100% 209.83% at 0% 0%, rgba(8, 92, 160, 0.8) 0%, rgba(8, 92, 160, 0) 100%)
  --mono-200 radial-gradient(100% 209.83% at 0% 0%, rgba(9, 109, 189, 0.8) 0%, rgba(8, 92, 160, 0.24) 100%)
  --mono-300 rgba(41, 212, 255, 0.4)
  --mono-400 rgba(41, 212, 255, 0.2)
  --mono-a500 rgba(204, 219, 255, 0.32)
  // light-green
  --light-green-900 #AEEDF4
  --light-green-a100 rgba(174, 237, 244, 0.64)
  --light-green-a200 rgba(174, 237, 244, 0.32)
  --light-green-a300 rgba(174, 237, 244, 0.16)
  // green
  --green-900 #00E0AA
  --green-a100 rgba(0, 224, 170, 0.64)
  --green-a200 rgba(0, 224, 170, 0.32)
  --green-a300 rgba(0, 224, 170, 0.16)
  // yellow
  --yellow-900 #D8E044
  --yellow-a100 rgba(216, 224, 68, 0.64)
  --yellow-a200 rgba(216, 224, 68, 0.32)
  --yellow-a300 rgba(216, 224, 68, 0.16)
  // orange
  --orange-900 #F79462
  --orange-a100 rgba(247, 148, 98, 0.64)
  --orange-a200 rgba(247, 148, 98, 0.32)
  --orange-a300 rgba(247, 148, 98, 0.16)
  // red
  --red-900 #E96070
  --red-a100 rgba(233, 96, 112, 0.64)
  --red-a200 rgba(233, 96, 112, 0.32)
  --red-a300 rgba(233, 96, 112, 0.16)
  // purple
  --purple-900 #9B6EED
  --purple-a100 rgba(155, 110, 237, 0.64)
  --purple-a200 rgba(155, 110, 237, 0.32)
  --purple-a300 rgba(155, 110, 237, 0.16)
  --radius-normal 8px
