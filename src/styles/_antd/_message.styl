:global
  .hz-antd
    .ant-message
      color var(--light-general-100)
      .view_detail.ant-message-notice
        .ant-message-notice-content
          .ant-message-custom-content
            color var(--light-type-800)
            &.ant-message-info
              background var(--light-bg-100)
            &.ant-message-warning
              background var(--light-bg-100)
            &.ant-message-error
              background var(--light-bg-100)
            &.ant-message-success
              background var(--light-bg-100)
            &.ant-message-loading
              background var(--light-bg-100)
      .message_system.ant-message-notice
        .ant-message-notice-content
          box-shadow none
          .ant-message-custom-content
            color var(--light-type-800)
            padding 6px 14px 6px 104px
            &.ant-message-info
              box-shadow none
              background var(--light-primary-a100)
            &.ant-message-warning
              box-shadow none
              background var(--light-orange-a100)
            &.ant-message-error
              box-shadow none
              background var(--light-red-a100)
            &.ant-message-success
              box-shadow none
              background var(--light-lime-a100)
      .ant-message-notice-content
        padding 0
        border-radius 8px
        overflow hidden

        .ant-message-custom-content
          padding 8px 14px 8px 16px
          font-weight 600
          font-size var(--font-size-normal)
          display flex
          align-items center

          &.ant-message-info
            background var(--light-primary-900)
            box-shadow 0px 32px 64px rgba(15, 34, 67, 0.06), 0px 16px 32px rgba(15, 34, 67, 0.06), 0px 8px 16px rgba(15, 34, 67, 0.06), 0px 4px 8px rgba(15, 34, 67, 0.06), 0px 1px 3px rgba(15, 34, 67, 0.12), 0px 0px 1px rgba(15, 34, 67, 0.2)
          &.ant-message-warning
            background var(--light-orange-900)
            box-shadow 0px 32px 64px rgba(15, 34, 67, 0.06), 0px 16px 32px rgba(15, 34, 67, 0.06), 0px 8px 16px rgba(15, 34, 67, 0.06), 0px 4px 8px rgba(15, 34, 67, 0.06), 0px 1px 3px rgba(15, 34, 67, 0.12), 0px 0px 1px rgba(15, 34, 67, 0.2)
          &.ant-message-error
            background var(--light-red-900)
            box-shadow 0px 32px 64px rgba(15, 34, 67, 0.06), 0px 16px 32px rgba(15, 34, 67, 0.06), 0px 8px 16px rgba(15, 34, 67, 0.06), 0px 4px 8px rgba(15, 34, 67, 0.06), 0px 1px 3px rgba(15, 34, 67, 0.12), 0px 0px 1px rgba(15, 34, 67, 0.2)
          &.ant-message-success
            background var(--light-lime-900)
            box-shadow 0px 32px 64px rgba(15, 34, 67, 0.06), 0px 16px 32px rgba(15, 34, 67, 0.06), 0px 8px 16px rgba(15, 34, 67, 0.06), 0px 4px 8px rgba(15, 34, 67, 0.06), 0px 1px 3px rgba(15, 34, 67, 0.12), 0px 0px 1px rgba(15, 34, 67, 0.2)
          &.ant-message-loading
            background var(--light-primary-900)
            box-shadow 0px 32px 64px rgba(15, 34, 67, 0.06), 0px 16px 32px rgba(15, 34, 67, 0.06), 0px 8px 16px rgba(15, 34, 67, 0.06), 0px 4px 8px rgba(15, 34, 67, 0.06), 0px 1px 3px rgba(15, 34, 67, 0.12), 0px 0px 1px rgba(15, 34, 67, 0.2)
