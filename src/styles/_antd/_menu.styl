:global
  .ant-menu
    line-height-32 = 32px
    background none
    .ant-menu-item, .ant-menu-submenu
      min-width 182px

    &:not(.ant-menu-horizontal) .ant-menu-item-selected
      background-color: #e6f7ff;


    &.ant-menu-horizontal, &.ant-menu-submenu-horizontal
      line-height line-height-32
      border-bottom 0
      &:not(.ant-menu-dark)
        & > .ant-menu-item, & > .ant-menu-submenu
          padding 0 20px
          border-radius 6px
          color var(--type-800)
        & > .ant-menu-item-selected, & > .ant-menu-submenu-open, & > .ant-menu-item:hover, & > .ant-menu-submenu:hover, & > .ant-menu-item-active, & > .ant-menu-submenu-active, & > .ant-menu-item-selected, & > .ant-menu-submenu-selected
          border-bottom 2px solid transparent
          color var(--type-800)
        & > .ant-menu-item:hover, & > .ant-menu-submenu:hover, & > .ant-menu-submenu-open, & > .ant-menu-item-active, & > .ant-menu-submenu-active
          background var(--mono-a100)
          color var(--type-800)
          .ant-menu-submenu-title, a
            color var(--type-800)
        & > .ant-menu-item-selected, & > .ant-menu-item-selected, & > .ant-menu-submenu-selected
          background var(--primary-a100)
          color var(--primary-900)
          &.ant-menu-item:hover, &.ant-menu-submenu:hover
            color var(--primary-900)
            background var(--primary-a100)
        & > .ant-menu-submenu-selected
          &:hover
            .ant-menu-submenu-title, a
              color var(--primary-900)
          &.ant-menu-item:hover, &.ant-menu-submenu:hover
            color var(--primary-900)
            background var(--primary-a100)
          .ant-menu-submenu-title
            position relative
            padding-right 28px
            &:after
              content ' '
              display inline-block
              width 16px
              height 8px
              border-color: var(--icon);
              border-style: solid;
              border-width: 0 0 1px 1px;
              transform: rotate(-45deg);
              position: absolute;
              right: 0;
              top: 9px;

  .ant-menu-submenu-popup .ant-menu-vertical
    padding 8px
    box-shadow 0px 32px 64px rgba(15, 34, 67, 0.06), 0px 16px 32px rgba(15, 34, 67, 0.06), 0px 8px 16px rgba(15, 34, 67, 0.06), 0px 4px 8px rgba(15, 34, 67, 0.06), 0px 1px 3px rgba(15, 34, 67, 0.12), 0px 0px 1px rgba(15, 34, 67, 0.2)
    border-radius 8px

  .ant-menu:not(.ant-menu-horizontal) .ant-menu-item
    font-size var(--font-size-normal)
    color var(--type-800)
    position relative
    padding-right 28px
    &:hover:not(.ant-menu-item-selected)
      background var(--mono-a100)
      color var(--type-800)

  .ant-menu:not(.ant-menu-horizontal) .ant-menu-item-selected
    background-color var(--primary-a100)
    color var(--primary-900)
    &:after
      content ' '
      display inline-block
      width 16px
      height 8px
      border-color var(--icon);
      border-style solid;
      border-width 0 0 1px 1px;
      transform rotate(-45deg);
      position absolute;
      right 9px
      left auto!important
      top 9px
      opacity 1

  .ant-menu-vertical .ant-menu-item:not(:last-child), .ant-menu-vertical-left .ant-menu-item:not(:last-child), .ant-menu-vertical-right .ant-menu-item:not(:last-child), .ant-menu-inline .ant-menu-item:not(:last-child)
    margin-bottom 1px

  .ant-menu-vertical > .ant-menu-item, .ant-menu-vertical-left > .ant-menu-item, .ant-menu-vertical-right > .ant-menu-item, .ant-menu-inline > .ant-menu-item, .ant-menu-vertical > .ant-menu-submenu > .ant-menu-submenu-title, .ant-menu-vertical-left > .ant-menu-submenu > .ant-menu-submenu-title, .ant-menu-vertical-right > .ant-menu-submenu > .ant-menu-submenu-title, .ant-menu-inline > .ant-menu-submenu > .ant-menu-submenu-title
    height 32px
    line-height 32px

  .ant-menu-vertical .ant-menu-item, .ant-menu-vertical-left .ant-menu-item, .ant-menu-vertical-right .ant-menu-item, .ant-menu-inline .ant-menu-item, .ant-menu-vertical .ant-menu-submenu-title, .ant-menu-vertical-left .ant-menu-submenu-title, .ant-menu-vertical-right .ant-menu-submenu-title, .ant-menu-inline .ant-menu-submenu-title
    margin-top 1px

  .ant-menu-vertical.ant-menu-sub > .ant-menu-item, .ant-menu-vertical-left.ant-menu-sub > .ant-menu-item, .ant-menu-vertical-right.ant-menu-sub > .ant-menu-item, .ant-menu-vertical.ant-menu-sub > .ant-menu-submenu, .ant-menu-vertical-left.ant-menu-sub > .ant-menu-submenu, .ant-menu-vertical-right.ant-menu-sub > .ant-menu-submenu
    border-radius 6px

