:global
  .ant-pagination
    font-size var(--font-size-normal)
    color var(--light-type-800)
    .ant-select
      background transparent
      box-shadow none
      &.ant-select-single.ant-select-show-arrow .ant-select-selection-item
        padding-right 14px
      .ant-select-arrow
        top 55%
        font-size 8px
        height 6px
      &:hover
        background transparent
    .anticon
      vertical-align 0
    .ant-select .ant-select-selection-item
      color rgba(21, 22, 24, 0.72)
    .ant-pagination-prev .ant-pagination-item-link, .ant-pagination-next .ant-pagination-item-link
      font-size 8px
    .ant-pagination-prev, .ant-pagination-next, .ant-pagination-jump-prev, .ant-pagination-jump-next,.ant-pagination-item
      height 28px
      min-width 28px
      border-radius: 4px;
    .ant-pagination-item
      line-height 26px
    .ant-pagination-prev, .ant-pagination-next, .ant-pagination-jump-prev, .ant-pagination-jump-next
      line-height 30px
    .ant-pagination-item
      line-height 26px
    .ant-pagination-item a
      color var(--light-type-700)
    .ant-select-single:not(.ant-select-customize-input) .ant-select-selector
      height 30px
    .ant-pagination-options-quick-jumper
      height 28px
    .ant-pagination-options-quick-jumper input
      padding 0 8px
      height 28px
      background var(--light-mono-a100)
      border-radius: 4px 4px 0px 0px
      border none
      border-bottom 1px solid var(--light-mono-a300)

      &:focus
        box-shadow none

    .ant-pagination-item-active
      border none
      background var(--light-primary-a100)
      line-height 28px
    .ant-pagination-item-active a
      color var(--light-primary-900)
    .ant-pagination-item:focus, .ant-pagination-item:hover
      border 1px solid var(--light-primary-900)
      line-height 26px
    .ant-pagination-item:focus a, .ant-pagination-item:hover a
      color var(--light-type-800)
    .ant-select:not(.ant-select-customize-input) .ant-select-selector
      border none
    .ant-select-focused:not(.ant-select-disabled).ant-select:not(.ant-select-customize-input) .ant-select-selector
      border none
      box-shadow none
    &.mini
      .ant-pagination-prev, .ant-pagination-next, .ant-pagination-item
        height 24px
        min-width 24px
        border 1px solid var(--light-mono-a500)
        margin-right 4px
      .ant-pagination-prev, .ant-pagination-next
        line-height 24px
      .ant-pagination-item
        line-height 22px
      .ant-pagination-item:not(.ant-pagination-item-active)
        border-color var(--light-mono-a500)
      .ant-select-single:not(.ant-select-customize-input) .ant-select-selector
        height 24px
      .ant-pagination-item-active
        border none
        line-height 24px


