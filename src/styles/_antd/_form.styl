:global
    .hz-antd .ant-form
        .ant-input
            width 100%
            height 28px
            background rgba(15, 34, 67, 0.05)
            border-radius 4px 4px 0px 0px
            font-size 12px

        .ant-input-affix-wrapper
            .ant-input-prefix + .ant-input
                width 280px
                height 32px
                background rgba(15, 34, 67, 0.05)
                border-radius 4px 4px 0px 0px

        .ant-checkbox-wrapper
            .ant-checkbox-inner:after
                left 18%

            .ant-checkbox-checked
                .ant-form-item input[type='checkbox']
                    width 13px
                    height 13px

                .ant-checkbox-inner
                    background var(--primary-900)
                    border-radius 3px

        .ant-form-item
            font-size 12px

            .ant-form-item-control
                .ant-form-item-control-input
                    .ant-form-item-control-input-content
                        .ant-input-suffix
                            right 630px

                    .ant-checkbox-wrapper
                        .ant-checkbox-checked + span, .ant-checkbox + span
                            padding-right 96px
                            font-size 12px

                    .login-form-forgot
                        font-weight normal
                        font-size 12px
                        color var(--primary-900)

                    .login-form-button
                        display block
                        background var(--primary-900)
                        width 280px
                        height 32px
                        border-radius 8px
                        margin-bottom 14px

                    .ant-btn-primary + a
                        color var(--primary-900)

                    #register_email, #register_password, #register_confirm, #register_captcha
                        width 262px
                        height 32px
                        background var(--red-a100)
                        border-radius 4px 4px 0px 0px

                    .ant-row
                        .ant-col
                            .ant-btn
                                margin-left -108px
                                border none
                                background rgba(255, 255, 255, 0)

                    .ant-form-item-children-icon
                        right 610px
                        top 51%

                .ant-form-item-explain-error
                    font-size 12px
                    color #FF5266
                    font-family PingFang SC
                    font-style normal
                    font-weight normal

        .ant-form-item-label > label
            font-weight 600
            font-size 12px
            text-align right
            color rgba(21, 22, 24, 0.36)
            margin 4px 0px
            width 140px
